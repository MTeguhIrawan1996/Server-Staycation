<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="edit-item-tab">
    <div class="dashboard-content mt-2 mb-5">
        <div class="row">
            <div class="col-12">
                <form action="/admin/item/<%= item.id  %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="title">Title</label>
                                        <input type="text" class="form-control" id="title" name="title"
                                            placeholder="Enter Title" value="<%= item.title  %>" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="price">Price</label>
                                        <input type="number" class="form-control" id="price" name="price"
                                            placeholder="Enter Price" value="<%= item.price  %>" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="city">City</label>
                                        <input type="text" class="form-control" id="city" name="city"
                                            placeholder="Enter City" value="<%= item.city  %>" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="categoryId">Category</label>
                                        <select name="categoryId" class="form-control" required>
                                            <option value="<%= item.categoryId.id  %>">--<%= item.categoryId.name  %>--
                                            </option>
                                            <% for (let i = 0; i< category.length; i++) {%>
                                            <option value="<%= category[i].id  %>"><%= category[i].name  %></option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="image">Image</label>
                                        <input type="file" multiple class="form-control pt-1" id="image" name="image" />
                                        <small class="text-muted">
                                            Kamu dapat memilih lebih dari satu file
                                        </small>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="description">Description</label>
                                        <textarea name="description" id="editor" cols="30" required rows="4"
                                            class="form-control">
                                            <%= item.description  %>
                                      </textarea>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2 mb-lg-2">
                                    <button type="submit" class="btn btn-success w-50 float-md-right">
                                        Edit Item
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    <a href="/admin/item" class="btn btn-dark w-50 float-md-left">Back</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>