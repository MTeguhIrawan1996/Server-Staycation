<div class="card shadow border-left-primary mb-4">
    <div class="card-header py-3">
        <a href="/admin/booking" class="btn btn-dark">Back</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 mb-3">
                    <div class="card shadow">
                        <div class="card-body">
                            <img src="https://web-production-0998.up.railway.app/<%= booking.payments.proofPayment  %>"
                                alt="image" class="w-100" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <% if(booking.payments.status === 'Proses') { %>

                        <form action="/admin/booking/<%= booking.id  %>/konfirmasi?_method=PUT" method="POST"
                            class="col-md-6 mb-2 mb-lg-2">
                            <button type="submit" class="btn btn-success w-100 float-md-right">
                                <i class="fas fa-check"></i>
                                Konfirmasi
                            </button>
                        </form>
                        <form action="/admin/booking/<%= booking.id  %>/reject?_method=PUT" method="POST"
                            class="col-md-6">
                            <button type="submit" class="btn btn-danger w-100 float-md-right">
                                <i class="fas fa-times"></i>
                                Reject
                            </button>
                        </form>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-8 mb-3">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name Member</th>
                                <th>Total Bayar</th>
                                <th>Bank</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>

                                <td><%= booking.memberId.firstName  %> <%= booking.memberId.lastName  %></td>
                                <td>Rp.<%= booking.total %></td>
                                <td><%= booking.payments.bankFrom %></td>
                                <td><%= booking.itemId.title %></td>
                            </tr>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>